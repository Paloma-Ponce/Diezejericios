         //Calcular área del triángulo

function calcularAreaTriangulo(base,altura){
    var area =(base*altura)/2;
    return area ;
}
var baseTriangulo =
parseFloat(prompt("ingresa la base del triángulo"));
var alturaTriangulo = 
parseFloat(prompt("ingresa la altura del triángulo"));

var areaTriangulo =
calcularAreaTriangulo( "El área del triángulo es:"+ areaTriangulo);


        //Convertir grados celsius a Fahrenheit

function celsiusToFahrenheit(celsius) {
  return (celsius * 9/5) + 32;
}

var celsius = prompt("Ingrese la temperatura en grados Celsius: ");
var fahrenheit = celsiusToFahrenheit(celsius);
console.log("La temperatura en grados Fahrenheit es: " + fahrenheit);


       //Encontar el máximo de dos números

function max(a, b) {
  if (a > b) {
    return a;
  } else {
    return b;
  }
}

var a = 10;
var b = 20;
var maxValue = max(a, b);
console.log("El valor máximo es: " + maxValue);


        // Calcular el factorial de un número

function factorial(n) {
  if (n === 0 || n === 1) {
    return 1;
  } else {
    return n * factorial(n - 1);
  }
}

var n1 = 5;
var n2 = 6;
var factorial1 = factorial(n1);
var factorial2 = factorial(n2);
console.log("El factorial de " + n1 + " es: " + factorial1);
console.log("El factorial de " + n2 + " es: " + factorial2);


      // Verificar si un número es primo

function esPrimo(n) {
  if (n <= 1) {
    return false;
  }

  for (var i = 2; i <= Math.sqrt(n); i++) {
    if (n % i === 0) {
      return false;
    }
  }
var n = 3;
var esPrimo = esPrimo(n);
console.log("El número " + n + " es primo: " + esPrimo);


      // Revertir una cadena de texto

function reverseString(str) {
  var reversed = "";
  for (var i = str.length - 1; i >= 0; i--) {
    reversed += str[i];
  }
  return reversed;
}


        //Cálcular la suma de los primeros N números naturales

function sumaDeNumerosNaturales(n) {
  var suma = 0;
  for (var i = 1; i <= n; i++) {
    suma += i;
  }
  return suma;
}

var n = 10;
var suma = sumaDeNumerosNaturales(n);
console.log("La suma de los primeros " + n + " números naturales es: " + suma);


        //Encontar el elemento más grande en un arreglo

function maxArray(arr) {
  var max = arr[0];
  for (var i = 1; i < arr.length; i++) {
    if (arr[i] > max) {
      max = arr[i];
    }
  }
  return max;
}

var arr = [1, 2, 3, 4, 5];
var maxValue = maxArray(arr);
console.log("El elemento más grande en el arreglo es: " + maxValue);


       // Verificar si una pabra es un palíndromo

function esPalíndromo(word) {
  var reversedWord = word.split("").reverse().join("");
  return word === reversedWord;
}


var word = "oso";
var esPalíndromo = esPalíndromo(word);
console.log("La palabra " + word + " es un palíndromo: " + esPalíndromo);


       //Generar un número aleatorio en un rango dado

function generarNumeroAleatorio(min, max) {
  return Math.floor(Math.random() * (max - min + 1)) + min;
}

var min = 1;
var max = 10;
var numeroAleatorio = generarNumeroAleatorio(min, max);
console.log("El número aleatorio es: " + numeroAleatorio);







